<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_pos_branch_config_form" model="ir.ui.view">
				<field name="name">inherit_bi_pos_branch_config</field>
				<field name="model">pos.config</field>
				<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
				<field name="arch" type="xml">
					<xpath expr="//div[@id='posbox_reference']" position="after">    
	                    <h2>Allowed POS Branche</h2>
			            <div class="row mt16 o_settings_container" id="allowed_branch">
			                <div class="col-xs-12 col-md-6 o_setting_box" title="Allowed POS Branch">
			                    <div class="o_setting_right_pane">
			                        <label for="branch_id" string="Allowed POS Branch"/>
			                        <div class="content-group mt16">
			                            <field name="branch_id"/>
                                        <field name='branch_name' invisible='1'/>
										<field name='branch_address' invisible="1"/>
			                        </div>
			                    </div>
			                </div>
			            </div>         
					</xpath>
				</field>
			</record>

            <record id="inherit_view_pos_branch_orders_form" model="ir.ui.view">
				<field name="name">inherit_bi_pos_branch_orders</field>
				<field name="model">pos.order</field>
				<field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
				<field name="arch" type="xml">
					<xpath expr="//field[@name='location_id']" position="after">    
	                    <field name="branch_id"/>       
					</xpath>
				</field>
			</record>

            <record id="pos_branch_field_session" model="ir.ui.view">
            <field name="name">POS Session</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <field name="config_id" position="after">
						<field name="branch_id" options="{'no_quick_create': True, 'no_create_edit' : True}"/>
                </field>
            </field>
        </record>
</odoo>
