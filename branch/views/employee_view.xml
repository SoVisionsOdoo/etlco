<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_inherit_hr_payslip_form" model="ir.ui.view">
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='contract_id']" position="after">
                    <field name="branch_id"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_employee_form" model="ir.ui.view">
            <field name="name">view.inherit.hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="branch_id"/>
                    <!-- Add your fields or attributes here -->
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_expense_form" model="ir.ui.view">
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_hr_expense_sheet_form" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='department_id']" position="after">
                    <field name="branch_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>