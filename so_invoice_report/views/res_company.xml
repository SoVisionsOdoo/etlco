<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_inherit_res_company_form" model="ir.ui.view">
            <field name="name">view.inherit.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="after">
                    <div class="oe_title_ar">
                        <label for="name_arbic" class="oe_edit_only"/>
                        <h1>
                            <field name="name_arbic"/>
                        </h1>
                    </div>
                    <xpath expr="//group[@name='social_media']" position="after">
                        <group>
                        <!-- <field name='invoice_design'/> -->
                            <field name="header" widget="image"/>
                            <field name="footer" widget="image"/>
                        </group>
                    </xpath>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Bank Info">
                        <group col="4">
                            <field name="banck_account_name"/>
                            <field name="banck_name"/>
                            <field name="banck_name_ar"/>
                            <field name='bank_address'/>
                            <field name="banck_account_no"/>
                            <field name="iban"/>
                            <field name="swift"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>
        <record id="res_partner_inhirit_form" model="ir.ui.view">
            <field name="name">res.partner.inhirit.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            <xpath expr="//div[@class='o_address_format']" position="inside">
                    <field name="build_no" placeholder="Build No..."/>
                    <field name="district" placeholder="District..."/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="fax"/>
                    <field name="add_no"/>
                    <field name="value_registration_no"/>
                    <field name="other_id"/>
                </xpath>
            </field>
        </record>

         <record id="res_account_move_inhirit_form" model="ir.ui.view">
            <field name="name">res.account.move.inhirit.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="number" string="nbr"/>
                </field>
                <!-- <xpath expr="//field[@name='invoice_line_ids']//field[@name='name']" position="after">
                       <field name="day"/>
                    </xpath> -->
               
                <xpath expr="//field[@name='payment_reference']" position="after">
                    <field name="po_no"/>
                    <field name="po_date"/>
                    <field name="project"/>
                    <field name='total_dis' invisible='1'/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>